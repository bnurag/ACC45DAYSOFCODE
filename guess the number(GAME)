#include <stdio.h>
#include <stdlib.h>
#include <time.h>

int main()
{
    int number, guess, attempt = 1;
    srand(time(0));
    number = rand() % 100 + 1;

   // printf("the number is %d\n", number);

    do
    {
        printf("guess the number between 1 and 100\n");
        scanf("%d", &guess);
        if (guess < number)
        {
            printf("guess higher number, you are close!\n");
        }
        else if (guess > number)
        {
            printf("guess lower number, you are close!\n");
        }
        else
        {
            printf("you guessed it in %d attempts\n", attempt);
        }
        attempt++;

    } while (guess != number);

        return 0;
}
